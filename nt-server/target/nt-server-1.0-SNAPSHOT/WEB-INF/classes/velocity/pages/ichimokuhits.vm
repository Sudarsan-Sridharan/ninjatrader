<html>
<head>
    <title>Test</title>
    <script src="$contextPath/js/jquery.min.js"></script>
    <script src="$contextPath/js/ninjachart.js"></script>
    <script src="$contextPath/js/indicator/ichimoku.js"></script>
    <script>
        $(document).ready(function() {
            $.get("ichimoku/weeklyhits", function(stockList) {

                var mainContainer = $("#chart");

                for (var i in stockList) {
                    var symbol = stockList[i].sym;
                    if (symbol) {
                        if (symbol.includes('^')) {
                            continue;
                        }
                        var chartContainer = $("<div></div>").attr("id", "chart" + symbol);
                        mainContainer.append(chartContainer);

                        var ninjaChart = new NinjaChart('chart' + symbol, true);
                        ninjaChart.addChart(new IchimokuChart(ninjaChart));
                        ninjaChart.showChart(symbol, "1W");
                    }
                }

            });
        });
    </script>

    #chartstyle()
</head>

<body>

<div id="chart"></div>
</body>
</html>