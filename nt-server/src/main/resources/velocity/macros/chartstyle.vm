#macro(chartstyle)
<style>
    .ninjaChart {
        cursor:default;
        background-color:#fff;
        font-family: Arial;
        font-size:10px;
        border:1px solid #000;
    }
    .ninjaChart .chart {
        cursor:none;
    }
    .ninjaChart .candles path {
        stroke-width:1px;
    }
    .ninjaChart .candles .up {
        stroke: #038003;
        fill:#03CA03;
    }
    .ninjaChart .candles .down {
        stroke: #650900;
        fill:#D20E00;
    }
    .ninjaChart .wicks path {
        stroke-width: 0.8px;
        stroke: #000;
    }
    .ninjaChart .prices text {
        font-family: Arial;
        cursor:default;
    }
    .ninjaChart .priceLines line,
    .ninjaChart .dateLines line {
        stroke-width: 1px;
        stroke: #eee;
    }
    .ninjaChart .lastPrice line {
        stroke-width: 0.5px;
        stroke: #009688;
    }
    .ninjaChart .lastPrice rect {
        fill: #009688;
    }
    .ninjaChart .lastPrice text {
        fill:#fff;
        cursor:default;
    }
    .ninjaChart .priceLines line.border,
    .ninjaChart .dateLines line.border {
        stroke-width: 1px;
        stroke: #aaa;
    }
    .ninjaChart .xAxis  {
        cursor:default;
    }
    .ninjaChart .xAxis text {
        font-size:10px;
    }
    .ninjaChart .xAxis .year {
        font-weight: bold;
    }
    .ninjaChart .xAxis .tick line {
        stroke: #000;
    }
    .ninjaChart .cols rect {
        opacity: 0;
    }
    .ninjaChart .dateCursor line,
    .ninjaChart .priceCursor line {
        stroke-width: 0.5px;
        stroke: #000;
    }
    .ninjaChart .targetDate rect {
        fill:#666;
    }
    .ninjaChart .targetDate text {
        fill:#fff;
    }
    .ninjaChart .currentValue rect {
        fill:#777;
    }
    .ninjaChart .currentValue text {
        fill:#fff;
        font-size:10px;
    }
    .ninjaChart .meta {
        position:absolute;
        margin:10px;
    }
    .ninjaChart .chartMeta {
        font-size:12px;
        color:#000;
        width: 400px;
    }
    .ninjaChart .stockMeta .symbol,
    .ninjaChart .simulationMeta .tnxType {
        padding-right:20px;
    }
    .ninjaChart .metaValue {
        color:#ff9800;
        padding:0 0.5em 0 0.5em;
    }
    .ninjaChart .stockMeta .up .metaValue,
    .ninjaChart .simulationMeta.buy .metaValue,
    .ninjaChart .simulationMeta.buy .tnxType {
        color:#038003;
    }
    .ninjaChart .stockMeta .down .metaValue,
    .ninjaChart .simulationMeta.sell .metaValue,
    .ninjaChart .simulationMeta.sell .tnxType {
        color:#a30d00;
    }

    .ninjaChart .grid path {
        stroke:#ddd;
        stroke-width:0.5px;
    }
    .ninjaChart .tenkan {
        fill:none;
        stroke:red;
        stroke-width:0.8px;
    }
    .ninjaChart .kijun {
        fill:none;
        stroke:green;
        stroke-width:1px;
    }
    .ninjaChart .chikou {
        fill:none;
        stroke:#2196F3;
        stroke-width:0.8px;
    }
    .ninjaChart .senkouA {
        fill:none;
        stroke-width: 0.8px;
        stroke-dasharray: 1,1;
        stroke: #0C70C5;
    }
    .ninjaChart .senkouB {
        fill:none;
        stroke: #FF7380;
        stroke-width: 0.8px;
        stroke-dasharray: 1,1;
    }
    .ninjaChart .kumo path {
        stroke-dasharray: 1,1;
        stroke-width: 0.5px;
        stroke: #FF7380;
    }
    .ninjaChart .kumo path.up {
        stroke: #0C70C5;
    }
    .ninjaChart .stockMeta .symbol {
        font-size: 14px;
    }

    .ninjaChart .simulation path {
        stroke-width:1px;
        opacity:0.4
    }
    .ninjaChart .simulation .sell {
        stroke:red;
    }
    .ninjaChart .simulation .buy {
        stroke:green;
    }
    .ninjaChart .volume .vBars {
        opacity: 0.4;
        fill: skyblue;
    }
</style>
#end